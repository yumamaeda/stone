<div class="profile-container">
  <h3 class="profile-name"><%= @user.name %></h3>
  <% if @user.id = current_user.id %>
  <div class="profile-content">
    <%= attachment_image_tag @user, :profile_image, :fill, 150, 150, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "sample_image.jpg", size:'150x150'  %>
    <% if @user.id == current_user.id %>
    <a><%= link_to "プロフィール編集", edit_user_path(@user), class: "profile-content2", :style=>"color:black;"%></a>
    <% end %>
  </div>
  <% end %>
</div>
<div class="clearfix">
 <% @stone_images.each do |stone_image| %>
 <div class="imgtxtbox1 ">
  <%= link_to stone_image_path(stone_image.id) do %>
  <%= attachment_image_tag stone_image, :image, :fill, 300, 300, class: "imgbox" %>
  <% end %>
  <p class="txtbox1">by
    <%= stone_image.user.name %>
  </p>
  <h3 class="txtbox">
   <%= link_to stone_image_path(stone_image.id) do %>
   <%= stone_image.shop_name %>
   <% end %>
 </h3>
 <ul class="inline-meta">
   <li class="txtbox">
    <%= stone_image.created_at.strftime('%Y/%m/%d') %>
    <p><%= stone_image.caption %></p>
  </li>
</ul>
</div>
<% end %>
</div>
</div>
</div>
<%= paginate @stone_images %>


